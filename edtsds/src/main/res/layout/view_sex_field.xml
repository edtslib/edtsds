<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLabel"
        style="@style/H3"
        android:textColor="@color/colorNeutral50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cbMan"
        app:drawableStartCompat="@drawable/ic_radio"
        android:drawablePadding="@dimen/dimen_8dp"
        style="@style/B2"
        android:textColor="@color/colorNeutral70"
        android:text="@string/man"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/cbWoman"
        style="@style/B2"
        android:textColor="@color/colorNeutral70"
        app:drawableStartCompat="@drawable/ic_radio"
        android:drawablePadding="@dimen/dimen_8dp"
        android:text="@string/woman"
        android:layout_marginStart="@dimen/dimen_50dp"
        app:layout_constraintTop_toTopOf="@id/cbMan"
        app:layout_constraintStart_toEndOf="@id/cbMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>