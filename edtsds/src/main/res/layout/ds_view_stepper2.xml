<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clRoot"
    android:layout_width="wrap_content"
    android:minWidth="100dp"
    android:layout_height="@dimen/dimen_32dp">
    <FrameLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/flLeft"
        android:layout_width="84dp"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clExpand"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_marginStart="@dimen/dimen_16dp"
                android:paddingStart="@dimen/dimen_16dp"
                android:paddingEnd="@dimen/dimen_16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/btMinus"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/colorPrimary30"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvValue"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    style="@style/H2"
                    android:layout_height="match_parent" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/btMinus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/ds_bg_round_primary"
                android:layout_width="@dimen/dimen_32dp"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_gravity="center"
                    android:src="@drawable/ds_ic_minus_bold"
                    android:layout_width="@dimen/dimen_12dp"
                    android:layout_height="@dimen/dimen_12dp" />
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ds_bg_round_primary"
        android:layout_width="@dimen/dimen_32dp"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/btAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ds_bg_round_white"
            android:layout_gravity="center"
            android:layout_width="22dp"
            android:layout_height="22dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:src="@drawable/ds_ic_plus_bold_primary30"
                android:layout_width="@dimen/dimen_12dp"
                android:layout_height="@dimen/dimen_12dp" />
        </FrameLayout>
        <FrameLayout
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btNew"
            android:background="@drawable/ds_bg_round_primary"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:src="@drawable/ds_ic_plus_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>