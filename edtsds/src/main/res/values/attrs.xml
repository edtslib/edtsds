<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AlertBoxView">
        <attr name="type" format="enum">
            <enum name="success" value="0" />
            <enum name="warning" value="1" />
            <enum name="error" value="2" />
        </attr>
        <attr name="message" format="string" />
        <attr name="dismissible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ButtonView">
        <attr name="variant" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="alternative" value="2" />
            <enum name="outline" value="3" />
        </attr>
        <attr name="size" format="enum">
            <enum name="medium" value="0" />
            <enum name="small" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TextFieldView">
        <attr name="inputType" format="enum">
            <enum name="text" value="0" />
            <enum name="password" value="1" />
            <enum name="pin" value="2" />
            <enum name="phone" value="3" />
            <enum name="ktp" value="4" />
            <enum name="address" value="5" />
        </attr>
        <attr name="maxLength" format="integer" />
        <attr name="imeOptions" format="enum">
            <enum name="next" value="0" />
            <enum name="done" value="1" />
            <enum name="send" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="OtpView">
        <attr name="otpLength" format="integer" />
        <attr name="otpPasswordAnimate" format="integer" />
        <attr name="otpPasswordSymbol" format="string" />
        <attr name="otpPlaceHolderText" format="string" />
        <attr name="otpPlaceHolderTextColor" format="color" />
        <attr name="otpType" format="enum">
            <enum name="number" value="0" />
            <enum name="password" value="1" />
            <enum name="passwordWithEye" value="2" />
        </attr>
    </declare-styleable>
</resources>