<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EdtsDialog" parent="Animation.Design.BottomSheetDialog" />
    <style name="BottomLayoutDialog" parent="EdtsDialog">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="CalendarDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimary30</item>
    </style>
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary50</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/TimePickerTheme.ButtonBarButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/TimePickerTheme.ButtonBarButtonStyle</item>
    </style>

    <style name="TimePickerTheme.ButtonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary50</item>
    </style>
</resources>