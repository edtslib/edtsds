<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RubikRegular">
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="RubikMedium">
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="D1" parent="RubikMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="D2" parent="RubikMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="H1" parent="RubikMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="H2" parent="RubikMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="H3" parent="RubikMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="H4" parent="RubikMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="B1" parent="RubikRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="B1Medium" parent="RubikMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="B2" parent="RubikRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="B3" parent="RubikRegular">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="P1" parent="RubikRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="P2" parent="RubikRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AlertTextError" parent="RubikRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSupportError</item>
    </style>

    <style name="WarningTextError" parent="RubikRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSupportWarning</item>
    </style>

    <style name="SuccessTextError" parent="RubikRegular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSupportSuccess</item>
    </style>
</resources>