<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- important -->
    <item android:state_selected="true" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSupportError" />
            <corners android:radius="@dimen/dimen_4dp" />
        </shape>
    </item>
    <!-- neutral -->
    <item android:state_selected="false" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite" />
            <stroke android:color="@color/colorNeutral30" android:width="1dp" />
            <corners android:radius="@dimen/dimen_4dp" />
        </shape>
    </item>
    <!-- secondary -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSecondary30" />
            <corners android:radius="@dimen/dimen_4dp" />
        </shape>
    </item>
    <!-- primary -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary30" />
            <corners android:radius="@dimen/dimen_4dp" />
        </shape>
    </item>
</selector>