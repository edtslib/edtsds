<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dimen_12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_12dp"
        android:paddingEnd="@dimen/dimen_12dp"
        android:paddingTop="@dimen/dimen_16dp"
        android:background="@color/colorPrimary30"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/white"
            android:text="Belanja Lengkap"
            style="@style/H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:id="@+id/vDivider"
        app:layout_constraintTop_toBottomOf="@id/llInfo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:background="@color/colorNeutral30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginStart="@dimen/dimen_16dp"
        android:id="@+id/ivPoint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/lbShipping"
        app:layout_constraintBottom_toBottomOf="@id/tvShipping"
        android:src="@drawable/ic_checkbox_on"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbShipping"
        android:text="Dikirim ke"
        android:textColor="@color/colorNeutral70"
        style="@style/H2"
        app:layout_constraintStart_toEndOf="@id/ivPoint"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/vDivider"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShipping"
        android:textColor="@color/colorNeutral50"
        style="@style/H2"
        app:layout_constraintStart_toStartOf="@id/lbShipping"
        app:layout_constraintTop_toBottomOf="@id/lbShipping"
        app:layout_constraintEnd_toStartOf="@id/tvEdit"
        android:layout_marginEnd="@dimen/dimen_8dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEdit"
        android:textColor="@color/colorPrimary30"
        style="@style/H3"
        android:text="Ubah"
        android:layout_marginEnd="@dimen/dimen_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lbShipping"
        app:layout_constraintBottom_toBottomOf="@id/tvShipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>