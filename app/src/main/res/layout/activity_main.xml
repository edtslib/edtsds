<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16dp"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">
    <id.co.edtslib.edtsds.textfield.TextFieldView
        android:id="@+id/etName"
        app:errorTextColor="@color/colorSupportError"
        app:errorTextAppearance="@style/B2"
        app:errorIconDrawable="@null"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:emptyHint="@string/full_name_input"
        android:hint="@string/full_name_mandatory"
        app:inputType="number"
        app:imeOptions="next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <id.co.edtslib.edtsds.textfield.date.DateFieldView
        android:id="@+id/tvSptaBaDate"
        style="@style/B1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:focusable="false"
        app:endIconDrawable="@drawable/ic_timer_small"
        app:endIconMode="custom"
        app:endIconTint="@color/colorNeutral50"
        app:hint="Contoh"
        app:fieldEnabled="false"
        app:hintTextAppearance="@style/B1"
        app:imeOptions="done"
        app:label="Contoh" />
    <id.co.edtslib.edtsds.textfield.time.TimeFieldView
        android:id="@+id/tvSptaBaTime"
        style="@style/B1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:focusable="false"
        app:endIconDrawable="@drawable/ic_timer_small"
        app:endIconMode="custom"
        app:endIconTint="@color/colorNeutral50"
        app:hint="Contoh"
        app:fieldEnabled="false"
        app:hintTextAppearance="@style/B1"
        app:imeOptions="done"
        app:label="Contoh" />
</LinearLayout>