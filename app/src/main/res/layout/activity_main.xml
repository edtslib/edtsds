<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16dp"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry">

    <id.co.edtslib.edtsds.stepper.StepperView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:textColorMinus="@color/cl_stepper"
        app:textColorPlus="@color/cl_stepper" />

    <id.co.edtslib.edtsds.textfield.date.DateFieldView
        android:id="@+id/fieldDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dateFormat="dd MMM yyy"
        app:hint="SampleDate"
        app:label="SampleDate" />

    <id.co.edtslib.edtsds.textfield.time.TimeFieldView
        android:id="@+id/fieldTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="SampleTime"
        app:label="SampleTime"
        app:timeFormat="HH:mm" />
</LinearLayout>